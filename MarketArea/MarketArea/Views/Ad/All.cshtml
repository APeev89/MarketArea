@model AllAdViewModel
<section class="mainpage-gallery" id="mainpageAds"></section>
<head>
    <title>@Model.CurrentCategory</title>
</head>

<div class="gallerywide" id="gallerywide">

    @foreach (var ad in Model.Ads)
    {
        <div class="wrapper">
            <div class="thumbnail">
                <img src="@ad.ImageUrl" alt="">
                <div class="caption">
                    <h4 class="normal">
                        <a asp-controller="Ad" asp-action="Details" asp-route-id="@ad.Id" title="@ad.Name">
                            <strong>@ad.Name</strong>
                        </a>
                    </h4>
                    <ul class="date-location">
                        <li>@ad.City.Name</li>
                        <li>@ad.DateFrom</li>
                    </ul>
                    <h6 class="pull-right">@ad.Price.ToString("c")</h6>
                </div>
            </div>
        </div>
    }
</div>